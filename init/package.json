{
  "name": "faros-ce-app-init",
  "version": "0.0.1",
  "description": "Setup logic for Faros CE services",
  "author": "Faros AI, Inc.",
  "homepage": "https://www.faros.ai",
  "license": "UNLICENSED",
  "repository": "https://github.com/faros-ai/faros-community-edition",
  "scripts": {
    "build": "tsc -p src",
    "clean": "rm -rf lib node_modules out",
    "fix": "prettier --write 'src/**/*.ts' 'test/**/*.ts' && npm run lint -- --fix",
    "lint": "eslint 'src/**/*.ts' 'test/**/*.ts'",
    "prepare": "npm run build",
    "test": "node --no-experimental-fetch node_modules/.bin/jest --verbose --color",
    "test:integration": "node --no-experimental-fetch node_modules/.bin/jest test/integration-tests/*.ts --verbose --color",
    "test:unit": "node --no-experimental-fetch node_modules/.bin/jest test/unit-tests/**/*.ts --verbose --color",
    "test-cov": "node --no-experimental-fetch node_modules/.bin/jest --coverage --verbose --color",
    "watch": "tsc -b -w src test"
  },
  "files": [
    "lib/",
    "resources/"
  ],
  "dependencies": {
    "@segment/analytics-node": "^1.1.3",
    "async-retry": "^1.3.3",
    "axios": "^1.7.4",
    "commander": "^9.1.0",
    "faros-js-client": "^0.5.5",
    "figlet": "^1.5.2",
    "fs": "^0.0.1-security",
    "fs-extra": "^10.0.0",
    "handlebars": "^4.7.7",
    "js-yaml": "^4.1.0",
    "lodash": "^4.17.21",
    "p-limit": "^3.1.0",
    "pino": "^7.6.4",
    "pluralize": "^8.0.0",
    "tar": "^6.2.1",
    "uuid": "^8.3.2",
    "verror": "^1.10.0"
  },
  "devDependencies": {
    "@types/async-retry": "^1.4.3",
    "@types/figlet": "^1.5.4",
    "@types/fs-extra": "^9.0.13",
    "@types/jest": "^29.5.10",
    "@types/js-yaml": "^4.0.5",
    "@types/lodash": "^4.14.168",
    "@types/luxon": "^3.4.2",
    "@types/node": "^17.0.45",
    "@types/pluralize": "^0.0.29",
    "@types/tar": "^6.1.1",
    "@types/uuid": "^8.3.4",
    "@types/verror": "^1.10.4",
    "@typescript-eslint/eslint-plugin": "^5.10.1",
    "@typescript-eslint/parser": "^5.10.1",
    "eslint": "^8.7.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "jest": "^29.7.0",
    "nock": "^13.5.1",
    "pino-pretty": "^7.5.1",
    "prettier": "2.5.1",
    "ts-jest": "^29.1.1",
    "typescript": "^4.5.5"
  },
  "overrides": {
    "node-forge": "^1.3.2"
  },
  "prettier": {
    "bracketSpacing": false,
    "parser": "typescript",
    "trailingComma": "es5",
    "singleQuote": true
  },
  "jest": {
    "coverageDirectory": "out/coverage",
    "coveragePathIgnorePatterns": [
      "<rootDir>/node_modules/",
      "<rootDir>/test/"
    ],
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      ".d.ts",
      ".js"
    ],
    "testTimeout": 5000,
    "transform": {
      "^.+\\.ts$": [
        "ts-jest",
        {
          "tsconfig": "test/tsconfig.json"
        }
      ]
    }
  }
}
